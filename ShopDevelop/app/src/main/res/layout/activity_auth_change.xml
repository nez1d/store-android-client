<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBackgroundColor"
    tools:context=".activity_auth_change">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            style="@style/TitleText"
            android:text="@string/auth_change_page_title"
            android:textSize="30sp" />

        <TextView
            style="@style/MainText"
            android:layout_marginTop="5sp"
            android:layout_marginHorizontal="25sp"
            android:fontFamily="@font/dm_sans"
            android:text="@string/auth_change_page_subtitle"
            android:textAlignment="center"
            android:textColor="#111827"
            android:textSize="18sp" />

        <Button
            android:id="@+id/toSignInBtn"
            style="@style/BaseDarkBtn"
            android:layout_marginTop="50sp"
            android:layout_marginHorizontal="25sp"
            android:stateListAnimator="@null"
            android:textAllCaps="false"
            android:text="@string/auth_change_page_btn_sing_in" />

        <Button
            android:id="@+id/toRegisterBtn"
            style="@style/BaseLightBtn"
            android:layout_marginHorizontal="25sp"
            android:layout_marginTop="15sp"
            android:stateListAnimator="@null"
            android:textAllCaps="false"
            android:text="@string/auth_change_page_btn_register" />

    </LinearLayout>

</RelativeLayout>