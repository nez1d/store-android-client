<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBackgroundColor"
    tools:context=".activity_forgot_password">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_marginTop="78sp"
        android:gravity="top">

        <TextView
            android:id="@+id/forgot_pass_title"
            style="@style/TitleText"
            android:text="@string/auth_forgot_pass_page_title"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/forgot_pass_subtitle"
            style="@style/MainText"
            android:text="@string/auth_forgot_pass_page_subtitle"
            android:layout_marginHorizontal="25sp"
            android:layout_marginTop="5sp"/>

        <TextView
            android:id="@+id/forgot_pass_input_group_name"
            style="@style/MainText"
            android:text="@string/auth_register_page_base_info_text"
            android:layout_marginHorizontal="25sp"
            android:textAlignment="viewStart"
            android:fontFamily="@font/dm_sans_bold"
            android:layout_marginTop="50sp"/>

        <EditText
            android:id="@+id/forgot_pass_email_input"
            style="@style/InputBase"
            android:layout_marginHorizontal="25sp"
            android:layout_marginTop="10sp"
            android:autofillHints=""
            android:background="@drawable/border"
            android:inputType="textEmailAddress"
            android:hint="@string/auth_forgot_pass_input_hint" />

        <Button
            style="@style/BaseDarkBtn"
            android:id="@+id/forgotPassSendCodeBtn"
            android:layout_marginTop="40sp"
            android:layout_marginHorizontal="25sp"
            android:stateListAnimator="@null"
            android:textAllCaps="false"
            android:text="@string/auth_forgot_pass_btn_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25sp"
            android:layout_marginHorizontal="25sp"
            android:gravity="center">

            <TextView
                android:id="@+id/have_account_text"
                style="@style/MainText"
                android:layout_width="wrap_content"
                android:textColor="@color/text_color_gray"
                android:layout_marginRight="5sp"
                android:text="@string/auth_register_page_account_text"/>

            <Button
                android:id="@+id/toLoginBtn"
                style="@style/LinkRegisterBtn"
                android:textAllCaps="false"
                android:stateListAnimator="@null"
                android:text="@string/auth_register_page_login_link"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>