<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="InputBase" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColorMain</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="android:fontFamily">@font/dm_sans</item>
        <item name="android:maxLines">1</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:paddingLeft">10sp</item>
        <item name="android:paddingRight">10sp</item>
    </style>

    <style name="MainTitleText" parent="">
        <item name="android:fontFamily">@font/dm_sans_semibold</item>
        <item name="android:textColor">@color/textColorMain</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MainText" parent="">
        <item name="android:fontFamily">@font/dm_sans</item>
        <item name="android:textColor">@color/textColorMain</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MainBtn" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/darkBtnColor</item>
        <item name="android:fontFamily">@font/dm_sans</item>
        <item name="android:textColor">@color/lightBackgroundColor</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="LinkRegisterText" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/have_account_text_color</item>
        <item name="android:fontFamily">@font/dm_sans_bold</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textAlignment">textEnd</item>
    </style>

    <style name="LinkRegisterBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/lightBackgroundColor</item>
        <item name="android:fontFamily">@font/dm_sans_bold</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/login_link_btn</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="SearchInput" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColorMain</item>
        <item name="android:textColorHint">@color/textColorSearch</item>
        <item name="android:fontFamily">@font/dm_sans</item>
        <item name="android:maxLines">1</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:background">@drawable/header_search_border</item>
        <item name="android:paddingLeft">20sp</item>
        <item name="android:paddingRight">20sp</item>
    </style>

    <style name="BottomMenuBtn" >
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:backgroundTint">@color/textColorHint</item>
        <item name="android:fontFamily">@font/dm_sans</item>
        <item name="android:textColor">@color/lightBackgroundColor</item>
        <item name="android:textSize">16dp</item>
    </style>
</resources>
